<script>
    const chatBox = document.getElementById("chatBox");
    const userInput = document.getElementById("userInput");

    // 1. Enter key support
    userInput.addEventListener("keypress", (e) => { if (e.key === "Enter") sendMessage(); });

    // 2. Dark Mode
    function toggleDarkMode() {
        document.body.classList.toggle('dark-mode');
        const isDark = document.body.classList.contains('dark-mode');
        document.getElementById("themeBtn").innerText = isDark ? "â˜€ï¸ Light" : "ğŸŒ™ Dark";
    }

    // 3. Clear Chat
    function clearChat() {
        chatBox.innerHTML = `<div class="bot-message">Chat cleared. How can I help you now?</div>`;
    }

    function timeNow() {
        return new Date().toLocaleTimeString([], {hour:'2-digit', minute:'2-digit'});
    }

    function quickAsk(text) {
        userInput.value = text;
        sendMessage();
    }

    function sendMessage() {
        const msg = userInput.value.trim();
        if (!msg) return;

        // Append User Message
        chatBox.innerHTML += `<div class="user-message">${msg}<div style="font-size:10px; text-align:right; margin-top:4px; opacity:0.8;">${timeNow()}</div></div>`;
        userInput.value = "";
        
        // Typing indicator
        const typing = document.createElement("div");
        typing.className = "bot-message";
        typing.id = "typing";
        typing.innerHTML = "<i>AI is thinking...</i>";
        chatBox.appendChild(typing);
        chatBox.scrollTop = chatBox.scrollHeight;

        setTimeout(() => {
            const t = document.getElementById("typing");
            if(t) t.remove();
            generateReply(msg.toLowerCase());
        }, 800);
    }

    function generateReply(message) {
        let reply = "";
        
        if (message.includes("ragging")) {
            reply = `<b>ğŸš¨ Anti-Ragging Policy</b><br>We have a zero-tolerance policy.
                     <div class="info-card"><b>Call:</b> 1800-180-5522<br><b>Email:</b> helpline@antiragging.in</div>`;
        } else if (message.includes("hod") || message.includes("contact")) {
            reply = `<b>ğŸ‘¨â€ğŸ« Department Heads</b>
                     <div class="info-card"><b>CS:</b> Dr. Kumar (Room 101)<br><b>ME:</b> Dr. Sharma (Room 204)</div>`;
        } else if (message.includes("fee")) {
            reply = `<b>ğŸ’° Fee Structure</b><br>Fees can be paid via the Student Portal using Net Banking or UPI.
                     <div class="info-card">Late fee applies after the 15th of every month.</div>`;
        } else if (message.includes("hour") || message.includes("time")) {
            reply = `<b>ğŸ•’ Office Timings</b><br>Administrative office is open:<br>Mon - Sat: 9:00 AM - 4:00 PM`;
        } else if (message.includes("exam")) {
            reply = `<b>ğŸ“… Exam Timetable</b><br>Mid-term exams start next month. 
                     <div class="info-card">Check the "Downloads" section on the college website for the PDF.</div>`;
        } else {
            reply = `ğŸ¤– I'm not sure about that. Try asking about <b>Fees, Exams, or HOD contacts.</b>`;
        }

        chatBox.innerHTML += `<div class="bot-message">${reply}<div style="font-size:10px; text-align:right; margin-top:4px; opacity:0.5;">${timeNow()}</div></div>`;
        chatBox.scrollTop = chatBox.scrollHeight;
    }
</script>

