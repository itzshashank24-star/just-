    // Initialize
    window.addEventListener("load", () => {
        const darkModeEnabled = localStorage.getItem("darkMode") === "true";
        if (darkModeEnabled) {
            document.body.classList.add('dark-mode');
            document.getElementById("themeBtn").innerText = "‚òÄÔ∏è";
        }
    });

    userInput.addEventListener("keypress", (e) => {
        if (e.key === "Enter") sendMessage();
    });

    function changeLanguage(lang) {
        currentLang = lang;
        updateUILanguage();
    }

    function updateUILanguage() {
        const t = translations[currentLang];
        document.getElementById("askAbout").innerText = t.askAbout;
        document.getElementById("t-courses").innerText = t.courses;
        document.getElementById("t-fees").innerText = t.fees;
        document.getElementById("t-admissions").innerText = t.admissions;
        document.getElementById("t-campus").innerText = t.campus;
        document.getElementById("t-placements").innerText = t.placements;
        document.getElementById("t-pyq").innerText = t.pyq;
        document.getElementById("btn-courses").innerText = t.btnCourses;
        document.getElementById("btn-fees").innerText = t.btnFees;
        document.getElementById("btn-admission").innerText = t.btnAdmission;
        document.getElementById("btn-facilities").innerText = t.btnFacilities;
        document.getElementById("btn-placement").innerText = t.btnPlacement;
        document.getElementById("btn-contact").innerText = t.btnContact;
        document.getElementById("btn-scholarship").innerText = t.btnScholarship;
        document.getElementById("btn-samarth").innerText = t.btnSamarth;
        document.getElementById("btn-youtube").innerText = t.btnYoutube;
        document.getElementById("modal-title").innerText = t.modalTitle;
        document.getElementById("modal-desc").innerText = t.modalDesc;
        document.getElementById("open-portal").innerText = t.openPortal;
        document.getElementById("welcome-title").innerText = t.welcome;
        document.getElementById("welcome-desc").innerHTML = t.welcomeDesc;
    }

    function sendMessage() {
        const msg = userInput.value.trim();
        if (msg === "") return;

        addMessage(msg, "user");
        userInput.value = "";

        setTimeout(() => {
            processQuery(msg);
        }, 300);
    }

    function addMessage(text, sender) {
        const msgDiv = document.createElement("div");
        msgDiv.className = sender === "user" ? "user-message" : "bot-message";
        msgDiv.innerHTML = text;
        chatBox.appendChild(msgDiv);
        chatBox.scrollTop = chatBox.scrollHeight;
    }

    function processQuery(query) {
        const lowerQuery = query.toLowerCase();
        let response = "";

        if (lowerQuery.includes("course") || lowerQuery.includes("‡§ï‡•ã‡§∞‡•ç‡§∏") || lowerQuery.includes("program")) {
            response = knowledgeBase.courses[currentLang];
        } else if (lowerQuery.includes("fee") || lowerQuery.includes("cost") || lowerQuery.includes("‡§´‡•Ä‡§∏")) {
            response = knowledgeBase.fees[currentLang];
        } else if (lowerQuery.includes("admission") || lowerQuery.includes("admit") || lowerQuery.includes("‡§™‡•ç‡§∞‡§µ‡•á‡§∂")) {
            response = knowledgeBase.admission[currentLang];
        } else if (lowerQuery.includes("facility") || lowerQuery.includes("campus") || lowerQuery.includes("‡§∏‡•Å‡§µ‡§ø‡§ß‡§æ")) {
            response = knowledgeBase.facilities[currentLang];
        } else if (lowerQuery.includes("place") || lowerQuery.includes("job") || lowerQuery.includes("‡§™‡•ç‡§≤‡•á‡§∏‡§Æ‡•á‡§Ç‡§ü")) {
            response = knowledgeBase.placement[currentLang];
        } else if (lowerQuery.includes("scholar") || lowerQuery.includes("‡§õ‡§æ‡§§‡•ç‡§∞‡§µ‡•É‡§§‡•ç‡§§‡§ø")) {
            response = knowledgeBase.scholarships[currentLang];
        } else if (lowerQuery.includes("contact") || lowerQuery.includes("phone") || lowerQuery.includes("‡§∏‡§Ç‡§™‡§∞‡•ç‡§ï")) {
            response = knowledgeBase.contact[currentLang];
        } else if (lowerQuery.includes("pyq") || lowerQuery.includes("question") || lowerQuery.includes("paper") || lowerQuery.includes("‡§∏‡§ø‡§≤‡•á‡§¨‡§∏")) {
            response = knowledgeBase.pyq[currentLang];
        } else if (lowerQuery.includes("samarth") || lowerQuery.includes("portal") || lowerQuery.includes("‡§∏‡§Æ‡§∞‡•ç‡§•")) {
            response = knowledgeBase.samarth[currentLang] + "<br><div class='portal-link' onclick=\"openSamarthPortal()\">üîê " + (currentLang === "en" ? "Open Samarth Portal" : "‡§∏‡§Æ‡§∞‡•ç‡§• ‡§™‡•ã‡§∞‡•ç‡§ü‡§≤ ‡§ñ‡•ã‡§≤‡•á‡§Ç") + "</div>";
        } else if (lowerQuery.includes("youtube") || lowerQuery.includes("update") || lowerQuery.includes("‡§Ø‡•Ç‡§ü‡•ç‡§Ø‡•Ç‡§¨") || lowerQuery.includes("‡§Ö‡§™‡§°‡•á‡§ü")) {
            response = knowledgeBase.youtube[currentLang] + "<br><div class='yt-link' onclick=\"openYouTubeChannel()\">‚ñ∂Ô∏è " + (currentLang === "en" ? "Visit YouTube Channel" : "‡§Ø‡•Ç‡§ü‡•ç‡§Ø‡•Ç‡§¨ ‡§ö‡•à‡§®‡§≤ ‡§™‡§∞ ‡§ú‡§æ‡§è‡§Ç") + "</div>";
        } else if (lowerQuery.includes("ragg") || lowerQuery.includes("‡§∞‡•à‡§ó‡§ø‡§Ç‡§ó")) {
            openComplaintModal();
            return;
        } else {
            response = currentLang === "en" ? "I didn't quite understand that. Please ask about courses, fees, admissions, campus, placements, scholarships, contact info, or PYQ papers." : "‡§Æ‡•Å‡§ù‡•á ‡§∏‡§Æ‡§ù ‡§®‡§π‡•Ä‡§Ç ‡§Ü‡§Ø‡§æ‡•§ ‡§ï‡•É‡§™‡§Ø‡§æ ‡§ï‡•ã‡§∞‡•ç‡§∏, ‡§´‡•Ä‡§∏, ‡§™‡•ç‡§∞‡§µ‡•á‡§∂, ‡§™‡§∞‡§ø‡§∏‡§∞, ‡§™‡•ç‡§≤‡•á‡§∏‡§Æ‡•á‡§Ç‡§ü, ‡§õ‡§æ‡§§‡•ç‡§∞‡§µ‡•É‡§§‡•ç‡§§‡§ø, ‡§∏‡§Ç‡§™‡§∞‡•ç‡§ï, ‡§Ø‡§æ ‡§™‡§ø‡§õ‡§≤‡•á ‡§™‡•ç‡§∞‡§∂‡•ç‡§® ‡§™‡§§‡•ç‡§∞ ‡§ï‡•á ‡§¨‡§æ‡§∞‡•á ‡§Æ‡•á‡§Ç ‡§™‡•Ç‡§õ‡•á‡§Ç‡•§";
        }

        addMessage(response, "bot");
    }

    function quickAsk(topic) {
        const queries = {
            courses: "Tell me about courses offered at DSMNRU",
            fees: "What are the fee structures?",
            admission: "How do admissions work?",
            facilities: "What are the campus facilities?",
            placement: "Tell me about placements",
            contact: "What is the contact information?",
            scholarship: "What scholarships are available?",
            samarth: "Tell me about Samarth Portal",
            youtube: "Tell me about YouTube updates"
        };

        const hiQueries = {
            courses: "DSMNRU ‡§Æ‡•á‡§Ç ‡§ï‡•å‡§® ‡§∏‡•á ‡§ï‡•ã‡§∞‡•ç‡§∏ ‡§π‡•à‡§Ç?",
            fees: "‡§´‡•Ä‡§∏ ‡§ï‡§ø‡§§‡§®‡•Ä ‡§π‡•à?",
            admission: "‡§™‡•ç‡§∞‡§µ‡•á‡§∂ ‡§ï‡•à‡§∏‡•á ‡§π‡•ã‡§§‡§æ ‡§π‡•à?",
            facilities: "‡§™‡§∞‡§ø‡§∏‡§∞ ‡§Æ‡•á‡§Ç ‡§ï‡•å‡§® ‡§∏‡•Ä ‡§∏‡•Å‡§µ‡§ø‡§ß‡§æ‡§è‡§Ç ‡§π‡•à‡§Ç?",
            placement: "‡§™‡•ç‡§≤‡•á‡§∏‡§Æ‡•á‡§Ç‡§ü ‡§ï‡•á ‡§¨‡§æ‡§∞‡•á ‡§Æ‡•á‡§Ç ‡§¨‡§§‡§æ‡§è‡§Ç",
            contact: "‡§∏‡§Ç‡§™‡§∞‡•ç‡§ï ‡§ú‡§æ‡§®‡§ï‡§æ‡§∞‡•Ä ‡§ï‡•ç‡§Ø‡§æ ‡§π‡•à?",
            scholarship: "‡§ï‡•å‡§® ‡§∏‡•Ä ‡§õ‡§æ‡§§‡•ç‡§∞‡§µ‡•É‡§§‡•ç‡§§‡§ø ‡§â‡§™‡§≤‡§¨‡•ç‡§ß ‡§π‡•à?",
            samarth: "‡§∏‡§Æ‡§∞‡•ç‡§• ‡§™‡•ã‡§∞‡•ç‡§ü‡§≤ ‡§ï‡•á ‡§¨‡§æ‡§∞‡•á ‡§Æ‡•á‡§Ç ‡§¨‡§§‡§æ‡§è‡§Ç",
            youtube: "‡§Ø‡•Ç‡§ü‡•ç‡§Ø‡•Ç‡§¨ ‡§Ö‡§™‡§°‡•á‡§ü ‡§ï‡•á ‡§¨‡§æ‡§∞‡•á ‡§Æ‡•á‡§Ç ‡§¨‡§§‡§æ‡§è‡§Ç"
        };

        const query = currentLang === "en" ? queries[topic] : hiQueries[topic];
        userInput.value = query;
        sendMessage();
    }

    function toggleDarkMode() {
        document.body.classList.toggle('dark-mode');
        const isDark = document.body.classList.contains('dark-mode');
        localStorage.setItem("darkMode", isDark);
        document.getElementById("themeBtn").innerText = isDark ? "‚òÄÔ∏è" : "üåô";
    }

    function clearChat() {
        if (confirm(currentLang === "en" ? "Clear all messages?" : "‡§∏‡§≠‡•Ä ‡§∏‡§Ç‡§¶‡•á‡§∂ ‡§∏‡§æ‡§´ ‡§ï‡§∞‡•á‡§Ç?")) {
            chatBox.innerHTML = "<div class='bot-message'><b id='welcome-title2'>" + translations[currentLang].welcome + "</b> üëã</div>";
        }
    }

    function openSamarthPortal() {
        window.open("https://dsmru.samarth.edu.in/index.php/site/login", "_blank");
    }

    function openYouTubeChannel() {
        window.open("https://www.youtube.com/@DSMNRUUpdates?app=desktop", "_blank");
    }

    function openComplaintModal() {
        document.getElementById("complaintModal").style.display = "block";
    }

    function closeComplaintModal() {
        document.getElementById("complaintModal").style.display = "none";
    }

    function openAntiRaggingPortal() {
        alert(currentLang === "en" ? "Please contact DSMNRU administration for anti-ragging complaints." : "‡§ï‡•É‡§™‡§Ø‡§æ ‡§∞‡•à‡§ó‡§ø‡§Ç‡§ó ‡§∂‡§ø‡§ï‡§æ‡§Ø‡§§‡•ã‡§Ç ‡§ï‡•á ‡§≤‡§ø‡§è DSMNRU ‡§™‡•ç‡§∞‡§∂‡§æ‡§∏‡§® ‡§∏‡•á ‡§∏‡§Ç‡§™‡§∞‡•ç‡§ï ‡§ï‡§∞‡•á‡§Ç‡•§");
    }

    window.onclick = function(event) {
        const modal = document.getElementById("complaintModal");
        if (event.target == modal) {
            modal.style.display = "none";
        }
    }

    updateUILanguage();
</script>

