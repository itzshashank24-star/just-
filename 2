<script>
    const chatbox = document.getElementById('chatbox');
    const userInput = document.getElementById('userInput');
    const status = document.getElementById('status');
    let currentLang = 'en';

    /* STUDENT DB */
    const studentDB = {
        STU123: { name: "Aditya Verma", attendance: "84%" },
        STU456: { name: "Riya Singh", attendance: "91%" }
    };

    const content = {
        en: {
            welcome: "Hello! I am your <b>AI Campus Partner</b>. How can I help you excel today?",
            unknown: "I'm sorry, I didn't catch that. Please use the menu below for help.",
            m_adm: "üìù Admissions", m_fee: "üìä Fees", m_course: "üìö Courses", m_pay: "üí≥ Pay Online",
            m_att: "üìâ Attendance", m_leave: "üìù Leave Apply", m_bus: "üöå Bus Tracker", 
            m_lib: "üìñ Library", m_comp: "‚ö†Ô∏è Complaint", m_hod: "üë®‚Äçüè´ HODs"
        },
        hi: {
            welcome: "‡§®‡§Æ‡§∏‡•ç‡§§‡•á! ‡§Æ‡•à‡§Ç ‡§Ü‡§™‡§ï‡§æ <b>AI ‡§ï‡•à‡§Ç‡§™‡§∏ ‡§™‡§æ‡§∞‡•ç‡§ü‡§®‡§∞</b> ‡§π‡•Ç‡§Ç‡•§ ‡§Æ‡•à‡§Ç ‡§Ü‡§™‡§ï‡•Ä ‡§ï‡•ç‡§Ø‡§æ ‡§∏‡§π‡§æ‡§Ø‡§§‡§æ ‡§ï‡§∞ ‡§∏‡§ï‡§§‡§æ ‡§π‡•Ç‡§Å?",
            unknown: "‡§ï‡•ç‡§∑‡§Æ‡§æ ‡§ï‡§∞‡•á‡§Ç, ‡§Æ‡•Å‡§ù‡•á ‡§∏‡§Æ‡§ù ‡§®‡§π‡•Ä‡§Ç ‡§Ü‡§Ø‡§æ‡•§ ‡§ï‡•É‡§™‡§Ø‡§æ ‡§®‡•Ä‡§ö‡•á ‡§¶‡§ø‡§è ‡§ó‡§è ‡§Æ‡•á‡§®‡•Ç ‡§ï‡§æ ‡§â‡§™‡§Ø‡•ã‡§ó ‡§ï‡§∞‡•á‡§Ç‡•§",
            m_adm: "üìù ‡§™‡•ç‡§∞‡§µ‡•á‡§∂", m_fee: "üìä ‡§∂‡•Å‡§≤‡•ç‡§ï", m_course: "üìö ‡§™‡§æ‡§†‡•ç‡§Ø‡§ï‡•ç‡§∞‡§Æ", m_pay: "üí≥ ‡§≠‡•Å‡§ó‡§§‡§æ‡§®",
            m_att: "üìâ ‡§â‡§™‡§∏‡•ç‡§•‡§ø‡§§‡§ø", m_leave: "üìù ‡§õ‡•Å‡§ü‡•ç‡§ü‡•Ä ‡§Ü‡§µ‡•á‡§¶‡§®", m_bus: "üöå ‡§¨‡§∏ ‡§ü‡•ç‡§∞‡•à‡§ï‡§∞", 
            m_lib: "üìñ ‡§≤‡§æ‡§á‡§¨‡•ç‡§∞‡•á‡§∞‡•Ä", m_comp: "‚ö†Ô∏è ‡§∂‡§ø‡§ï‡§æ‡§Ø‡§§", m_hod: "üë®‚Äçüè´ ‡§µ‡§ø‡§≠‡§æ‡§ó‡§æ‡§ß‡•ç‡§Ø‡§ï‡•ç‡§∑"
        }
    };

    function initChat() {
        chatbox.innerHTML = "";
        addBot(content[currentLang].welcome);
        renderMenu();
    }

    function changeLang(l) {
        currentLang = l;
        document.querySelectorAll('.lang-btn').forEach(b => b.classList.remove('active'));
        document.getElementById(`l-${l}`).classList.add('active');
        initChat();
    }

    function renderMenu() {
        const c = content[currentLang];
        chatbox.innerHTML += `
        <div class="menu-grid">
            <div class="menu-item" onclick="action('admission')">${c.m_adm}</div>
            <div class="menu-item" onclick="action('fees')">${c.m_fee}</div>
            <div class="menu-item" onclick="action('courses')">${c.m_course}</div>
            <div class="menu-item" onclick="action('attendance')">${c.m_att}</div>
            <div class="menu-item" onclick="action('leave')">${c.m_leave}</div>
            <div class="menu-item" onclick="action('bus')">${c.m_bus}</div>
            <div class="menu-item" onclick="action('library')">${c.m_lib}</div>
            <div class="menu-item" onclick="action('payment')">${c.m_pay}</div>
            <div class="menu-item" onclick="action('hod')">${c.m_hod}</div>
            <div class="menu-item" onclick="action('complaint')">${c.m_comp}</div>
        </div>`;
        scrollDown();
    }

    function action(text) {
        userInput.value = text;
        sendMessage();
    }

    function sendMessage() {
        const msg = userInput.value.trim();
        if (!msg) return;
        addUser(msg);
        userInput.value = "";
        status.style.display = "block";
        setTimeout(() => {
            status.style.display = "none";
            processAI(msg.toLowerCase());
        }, 600);
    }

    function processAI(m) {
        if (m.includes("admission")) {
            addBot("üéì <b>Admissions 2025-26:</b><br>Phase 1 is Open! Eligibility: 65% in PCM for B.Tech.");
            addBot("<a href='#' class='action-btn'>Apply Online Today</a>");
        } 
        else if (m.includes("fees")) {
            addBot("üí∞ <b>Fee Structure:</b><br>B.Tech: ‚Çπ92,000/sem<br>BCA: ‚Çπ48,000/sem<br>Hostel: ‚Çπ42,000/sem.");
        }
        else if (m.includes("course")) {
            addBot("üìö <b>Courses:</b> AI & ML, Cyber Security, Data Science, MBA Global.");
        }
        else if (m.includes("attendance")) {
            showAttendance();
        }
        else if (m.includes("leave")) {
            showLeave();
        }
        else if (m.includes("bus")) {
            showBus();
        }
        else if (m.includes("library")) {
            showLibrary();
        }
        else if (m.includes("hod")) {
            addBot("üë®‚Äçüè´ <b>HOD Directory:</b><br>CSE: Dr. Rajesh Kumar<br>IT: Dr. Sunita Mehra<br>MBA: Prof. Anjali Sharma.");
        }
        else if (m.includes("payment") || m.includes("pay")) {
            addBot("üí≥ <b>Payment Gateway:</b><br>Redirecting to secure SSL portal...");
            addBot("<button class='action-btn pay'>Proceed to Pay ‚û§</button>");
        }
        else if (m.includes("complaint")) {
            showComplaint();
        }
        else {
            addBot(content[currentLang].unknown);
            renderMenu();
        }
        scrollDown();
    }

    /* MODULE FUNCTIONS */
    function showAttendance() {
        addBot("üìä <b>Attendance System</b>");
        chatbox.innerHTML += `
        <div class="bubble bot-bubble">
            <input id="attId" placeholder="Enter Student ID (STU123)">
            <button class="action-btn pay" onclick="checkAttendance()">Check Status</button>
        </div>`;
    }

    function checkAttendance() {
        const id = document.getElementById("attId").value.toUpperCase();
        if (!studentDB[id]) {
            addBot("‚ùå Student ID not found.");
        } else {
            addBot(`‚úÖ <b>${studentDB[id].name}</b>, your attendance is <b>${studentDB[id].attendance}</b>`);
        }
        scrollDown();
    }

    function showLeave() {
        addBot("üìù <b>Leave Application</b>");
        chatbox.innerHTML += `
        <div class="bubble bot-bubble">
            <select><option>Medical Leave</option><option>Personal Leave</option></select>
            <textarea placeholder="Enter reason here..."></textarea>
            <button class="action-btn pay" onclick="submitLeave()">Submit Application</button>
        </div>`;
    }

    function submitLeave() {
        addBot("‚úÖ Leave submitted! Reference ID: <b>#" + Math.floor(100000 + Math.random() * 900000) + "</b>");
    }

    function showBus() {
        addBot("üöå <b>Live Bus Tracker</b>");
        addBot("<b>Route 1:</b> Ramesh Kumar (98765-XXXXX) - <b>10 min away</b><br><b>Route 2:</b> Suresh Singh (91234-XXXXX) - <b>18 min away</b>");
    }

    function showLibrary() {
        addBot("üìñ <b>Library Search:</b><br>1. Data Structures: <b>Available</b><br>2. OS Concepts: <b>Issued</b><br>3. AI Trends: <b>Available</b>");
        addBot("<button class='action-btn pay' onclick='addBot(\"‚úÖ Book Request Sent!\")'>Request Book</button>");
    }

    function showComplaint() {
        addBot("‚ö†Ô∏è <b>Complaint Redressal</b>");
        chatbox.innerHTML += `
        <div class="bubble bot-bubble">
            <select><option>Hostel</option><option>Faculty</option><option>Mess</option></select>
            <textarea placeholder="Describe issue..."></textarea>
            <button class="action-btn complaint" onclick="addBot('üìÆ Ticket Generated! ID: #'+Math.floor(1000+Math.random()*9000))">Submit Ticket</button>
        </div>`;
    }

    function addBot(t) { chatbox.innerHTML += `<div class="bubble bot-bubble">${t}</div>`; }
    function addUser(t) { chatbox.innerHTML += `<div class="bubble user-bubble">${t}</div>`; }
    function scrollDown() { chatbox.scrollTop = chatbox.scrollHeight; }

    initChat();
</script>

