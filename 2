<div class="app-shell">
    <header class="app-header">
        <h1>AI College Helpdesk</h1>
        <p>Managed by Team Bug Smasher | v7.2.0</p>
        <div class="lang-bar">
            <button class="lang-btn active" id="l-en" onclick="changeLang('en')">English</button>
            <button class="lang-btn" id="l-hi" onclick="changeLang('hi')">‡§π‡§ø‡§Ç‡§¶‡•Ä</button>
            <button class="lang-btn" id="l-pa" onclick="changeLang('pa')">‡®™‡©∞‡®ú‡®æ‡®¨‡©Ä</button>
        </div>
    </header>

    <main class="chat-area" id="chatbox"></main>
    <div id="status" class="status-dot">AI is thinking...</div>

    <button class="home-trigger" onclick="initChat()">üè†</button>

    <footer class="input-zone">
        <input type="text" id="userInput" placeholder="Ask anything..." onkeydown="if(event.key==='Enter')sendMessage()">
        <button class="send-trigger" onclick="sendMessage()">‚û§</button>
