<script>
function timeNow() {
    return new Date().toLocaleTimeString([], {hour:'2-digit', minute:'2-digit'});
}

function quickAsk(text) {
    document.getElementById("userInput").value = text;
    sendMessage();
}

function sendMessage() {
    const input = document.getElementById("userInput");
    const msg = input.value.trim();
    if (!msg) return;

    const chatBox = document.getElementById("chatBox");

    // User message
    chatBox.innerHTML += `
        <div class="user-message">${msg}<div class="time">${timeNow()}</div></div>
    `;
    input.value = "";

    // Typing indicator
    const typing = document.createElement("div");
    typing.className = "bot-message typing";
    typing.innerText = "ü§ñ AI is typing...";
    chatBox.appendChild(typing);
    chatBox.scrollTop = chatBox.scrollHeight;

    setTimeout(() => {
        typing.remove();
        chatBox.appendChild(generateReply(msg.toLowerCase()));
        chatBox.scrollTop = chatBox.scrollHeight;
    }, 1200);
}

function generateReply(message) {
    const chatBox = document.getElementById("chatBox");
    let reply = "";

    if (message.includes("ragging")) {
        reply = `üö® <b>Anti-Ragging Support (24/7)</b><br>
        <div class="info-card">
            <img src="https://img.icons8.com/color/48/000000/phone.png"/> Hotline: +91-9876543210
        </div>
        <div class="info-card">
            <img src="https://img.icons8.com/color/48/000000/link.png"/> Portal: <a href="https://antiragging.in" target="_blank">Click Here</a>
        </div>
        <div class="info-card">All complaints are confidential.</div>`;

    } else if (message.includes("admin") || message.includes("workload")) {
        reply = `üìÇ <b>Administrative Workload</b><br>
        <div class="info-card">Manual helpdesk handling causes delays & errors.</div>
        <div class="info-card">AI automates repetitive queries, saving staff time.</div>`;

    } else if (message.includes("office")) {
        reply = `üè¢ <b>Office Hours</b><br>
        <div class="info-card">Helpdesk: Mon-Fri, 9AM - 5PM</div>
        <div class="info-card">AI Chatbot available 24/7</div>`;

    } else if (message.includes("queue") || message.includes("counter")) {
        reply = `‚è≥ <b>Helpdesk Queues</b><br>
        <div class="info-card">Long queues at counters are common.</div>
        <div class="info-card">AI provides instant answers.</div>`;

    } else if (message.includes("notice") || message.includes("upload") || message.includes("form")) {
        reply = `üì¢ <b>Notice & Uploads</b><br>
        <div class="info-card">Important notices/forms uploaded instantly.</div>
        <div class="info-card">Reduces delays & missed deadlines.</div>`;

    } else if (message.includes("hod") || message.includes("contacts")) {
        reply = `<b>üë®‚Äçüè´ HOD Contacts</b><br>
        <div class="info-card"><img src="https://img.icons8.com/color/48/000000/administrator-male.png"/> CS: Dr. Rajesh Kumar - +91-9876501234</div>
        <div class="info-card"><img src="https://img.icons8.com/color/48/000000/administrator-male.png"/> EE: Dr. Meera Singh - +91-9876505678</div>
        <div class="info-card"><img src="https://img.icons8.com/color/48/000000/administrator-male.png"/> ME: Dr. Amit Sharma - +91-9876509123</div>
        <div class="info-card"><img src="https://img.icons8.com/color/48/000000/administrator-female.png"/> CE: Dr. Sunita Verma - +91-9876512345</div>`;

    } else if (message.includes("fee") || message.includes("exam") || message.includes("result")) {
        reply = `üí∞ <b>Fees / Exams / Results</b><br>
        <div class="info-card">Pay fees online via student portal.</div>
        <div class="info-card">Exam timetable & admit cards available online.</div>
        <div class="info-card">Results updated regularly on portal.</div>`;

    } else {
        reply = `ü§ñ <b>I can help with:</b><br>
        <div class="info-card">Anti-ragging complaints & portal</div>
        <div class="info-card">Administrative workload</div>
        <div class="info-card">Office hours & contacts</div>
        <div class="info-card">Helpdesk queues</div>
        <div class="info-card">Notices & uploads</div>
        <div class="info-card">HOD Contacts</div>
        <div class="info-card">Fees, Exams & Results</div>
        Please type your query or use the quick buttons above.`;
    }

    const div = document.createElement("div");
    div.className = "bot-message";
    div.innerHTML = reply + `<div class="time">${timeNow()}</div>`;
    return div;
}
</script>
