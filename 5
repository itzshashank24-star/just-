    };

    function initChat() {
        chatbox.innerHTML = "";
        addBotMessage(content[currentLang].welcome);
        renderMenu();
    }

    function changeLang(l) {
        currentLang = l;
        document.querySelectorAll('.lang-btn').forEach(b => b.classList.remove('active'));
        document.getElementById(`l-${l}`).classList.add('active');
        initChat();
    }

    function renderMenu() {
        const c = content[currentLang];
        const menuHtml = `
            <div class="menu-grid">
                <div class="menu-item" onclick="handleAction('${c.m_adm}')">${c.m_adm}</div>
                <div class="menu-item" onclick="handleAction('${c.m_fee}')">${c.m_fee}</div>
                <div class="menu-item" onclick="handleAction('${c.m_course}')">${c.m_course}</div>
                <div class="menu-item" onclick="handleAction('${c.m_pay}')">${c.m_pay}</div>
                <div class="menu-item" onclick="handleAction('${c.m_life}')">${c.m_life}</div>
                <div class="menu-item" onclick="handleAction('${c.m_place}')">${c.m_place}</div>
                <div class="menu-item" onclick="handleAction('${c.m_hod}')">${c.m_hod}</div>
                <div class="menu-item" onclick="handleAction('${c.m_query}')">${c.m_query}</div>
                <div class="menu-item" onclick="handleAction('${c.m_complaint}')">${c.m_complaint}</div>
                <div class="menu-item" onclick="handleAction('${c.m_map}')">${c.m_map}</div>
            </div>
        `;
        chatbox.innerHTML += menuHtml;
        scrollDown();
    }

    function handleAction(text) {
        userInput.value = text;
        sendMessage();
    }

    function sendMessage() {
        const msg = userInput.value.trim();
        if (!msg) return;

        addUserMessage(msg);
        userInput.value = "";
        status.style.display = "block";

        setTimeout(() => {
            status.style.display = "none";
            processAI(msg.toLowerCase());
        }, 800);
    }

    function processAI(m) {
        const c = content[currentLang];

        if (m.includes('admission') || m.includes('рдкреНрд░рд╡реЗрд╢') || m.includes('рижри╛риЦри▓ри╛')) {
            addBotMessage(c.adm_title);
            addBotMessage(c.adm_body);
            addBotMessage(c.adm_docs);
            chatbox.innerHTML += `<a href="#" class="action-btn">Apply Now Online</a>`;
        } 
        else if (m.includes('fee') || m.includes('рд╢реБрд▓реНрдХ') || m.includes('рилрйАри╕')) {
            addBotMessage(c.fee_title);
            addBotMessage(c.fee_data);
            chatbox.innerHTML += `<div class="data-card">Note: 5% discount on full annual payment.</div>`;
        }
        else if (m.includes('pay') || m.includes('рднреБрдЧрддрд╛рди') || m.includes('ринрйБриЧридри╛рии')) {
            addBotMessage(c.pay_title);
            addBotMessage(c.pay_body);
            chatbox.innerHTML += `<a href="https://rzp.io/l/demo" target="_blank" class="action-btn pay">Secure Payment Portal тЮд</a>`;
        }
        else if (m.includes('hod') || m.includes('рд╡рд┐рднрд╛рдЧрд╛рдзреНрдпрдХреНрд╖') || m.includes('риорйБриЦрйА')) {
            addBotMessage("ЁЯСитАНЁЯПл <b>Department HODs & Contact Detail:</b>");
            addBotMessage("<b>CSE:</b> Dr. Rajesh Kumar<br>ЁЯУз hod.cse@college.edu<br>ЁЯУЮ +91 98123 45671");
            addBotMessage("<b>IT:</b> Dr. S. Mehra<br>ЁЯУз hod.it@college.edu<br>ЁЯУЮ +91 98123 45672");
            addBotMessage("<b>MBA:</b> Prof. Anjali Sharma<br>ЁЯУз hod.mba@college.edu<br>ЁЯУЮ +91 98123 45673");
        }
        else if (m.includes('query') || m.includes('рдкреНрд░рд╢реНрди') || m.includes('рикрйБрй▒риЫриЧри┐рй▒риЫ')) {
            addBotMessage(c.query_title);
            addBotMessage(c.query_body);
        }
        else if (m.includes('complaint') || m.includes('рд╢рд┐рдХрд╛рдпрдд') || m.includes('ри╕ри╝ри┐риХри╛риЗрид')) {
            addBotMessage(c.comp_title);
            addBotMessage(c.comp_body);
            chatbox.innerHTML += `<a href="#" class="action-btn complaint">Submit New Complaint</a>`;
        }
        else if (m.includes('map') || m.includes('рдореИрдк') || m.includes('риорйИрик')) {
            addBotMessage(c.map_title);
            addBotMessage(c.map_body);
        }
        else if (m.includes('schol') || m.includes('рдЫрд╛рддреНрд░рд╡реГрддреНрддрд┐') || m.includes('ри╕риХри╛ри▓ри░ри╕ри╝ри┐рик')) {
            addBotMessage("ЁЯОУ <b>Scholarship Schemes:</b><br>тАв Merit: 90%+ marks = 50% waiver<br>тАв Sports: State/National level = 30% waiver");
        }
        else if (m.includes('place') || m.includes('рдкреНрд▓реЗрд╕рдореЗрдВрдЯ') || m.includes('рикри▓рйЗри╕риорйИриВриЯ')) {
            addBotMessage("ЁЯЪА <b>Placements Highlights 2024-25:</b><br>тАв <b>Highest Package:</b> тВ╣52.4 LPA (Atlassian)<br>тАв <b>Average Package:</b> тВ╣8.2 LPA<br>тАв <b>Total Offers:</b> 1200+<br>тАв <b>Top Recruiters:</b> Google, Microsoft, Amazon, Adobe, TCS Digital, and Zscaler.");
            chatbox.innerHTML += `<div class="data-card" style="border-left-color: var(--success);"><b>Star Achievement:</b> 5 students secured international offers in Germany & Japan.</div>`;
        }
        else if (m.includes('life') || m.includes('campus')) {
            addBotMessage("ЁЯОн <b>Campus Environment:</b><br>тАв 24/7 Library<br>тАв High-speed Wi-Fi Campus");
        }
        else if (m.includes('course') || m.includes('рдкрд╛рдареНрдпрдХреНрд░рдо')) {
            addBotMessage("ЁЯУЪ <b>Enhanced Academic Programs:</b><br>1. <b>B.Tech:</b> CSE (Specializations in AI/ML, Cyber Security, Data Science), IT, ECE.<br>2. <b>Management:</b> BBA, MBA (Dual Specialization in Fintech & HR).<br>3. <b>Computer Apps:</b> BCA, MCA.<br>4. <b>Professional:</b> B.Com (Hons.), BJMC (Media).");
            chatbox.innerHTML += `<div class="data-card"><b>Value Addons:</b> Industry certifications with AWS, IBM, and Microsoft included in the curriculum.</div>`;
        }
        else {
            addBotMessage(c.unknown);
            renderMenu();
        }
        scrollDown();
    }

    function addBotMessage(t) { chatbox.innerHTML += `<div class="bubble bot-bubble">${t}</div>`; }
    function addUserMessage(t) { chatbox.innerHTML += `<div class="bubble user-bubble">${t}</div>`; }
    function scrollDown() { chatbox.scrollTop = chatbox.scrollHeight; }

    initChat();
</script>

</body>
</html>
